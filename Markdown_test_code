#change text to old nodes, also change text to node.text when putting it in for your project
def split_nodes_image(old_nodes):
    #create nodes list to return
    new_nodes = []
    #loop through the old nodes
    for node in old_nodes:
        #store image links in a list from the node
        images = extract_markdown_images(node.text)
        text_copy = node.text
        #if the list is empty add the full node to the new nodes return list and continue
        if not images:
            #create node to return
            new_nodes.append(node)
            continue
        for image in images:
            txt,url = image
            the_split =text_copy.split(f"![{txt}]({url})",1)
            new_nodes.append(TextNode(the_split[0], TextType.PLAIN_TEXT))
            new_nodes.append(TextNode(txt,TextType.IMAGE,url))
            the_split.pop(0)
            text_copy = "".join(the_split)
        if text_copy.strip() != "":
            new_nodes.append(TextNode(text_copy.rstrip(),TextType.PLAIN_TEXT))
        
    
    #loop through the list to separate image links and text nodes and add those to the return list
    
    return new_nodes
    
nodes_list = split_nodes_image(nodes)
for node in nodes_list:
    print(node)
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
